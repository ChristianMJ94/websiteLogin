@model websiteLogin.Models.User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-center">
    <div class="col-md-5">
        @using (Html.BeginForm("Signup", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Signup</div>
                    @if (ViewBag.error != null)
                    {
                        <span class="badge badge-danger">@ViewBag.error</span>
                    }
                </div>
                <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName, "", new { @class = "form-control", @placeholder = "UserName" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserPassword)
                        @Html.TextBoxFor(m => m.UserPassword, "", new { @class = "form-control", @placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.UserPassword, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-danger" value="Signup" />
                    </div>
                </div>
            </div>
        }
        <div class="card">
            <div class="card-body">
                <a asp-controller="Home" asp-action="Login">Back</a>
            </div>
        </div>
    </div>
</div>